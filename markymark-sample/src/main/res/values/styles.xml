<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="MarkyMarkTheme">@style/MarkdownStyle</item>
    </style>

    <!-- Theme used by MarkyMark -->
    <style name="MarkdownStyle" parent="MarkyMarkStyle">
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="MarkdownHeader1Style">@style/header1</item>
        <item name="MarkdownHeader2Style">@style/header2</item>
        <item name="MarkdownHeader3Style">@style/header3</item>
        <item name="MarkdownHeader4Style">@style/header4</item>
        <item name="MarkdownHeader5Style">@style/header5</item>
        <item name="MarkdownHeader6Style">@style/header6</item>
        <item name="MarkdownParagraphStyle">@style/paragraph</item>
        <item name="MarkdownHorizontalRuleStyle">@style/horizontalRule</item>
        <item name="MarkdownQuoteStyle">@style/quote</item>
        <item name="MarkdownCodeStyle">@style/code</item>

        <item name="android:textColor">#c0c2c7</item>
        <item name="android:textColorLink">#f5f5f7</item>
    </style>

    <style name="horizontalRule" parent="@style/MarkyMarkHorizontalRule">
        <item name="android:background">#61646e</item>
    </style>

    <style name="quote" parent="@style/MarkyMarkQuote">
        <item name="android:background">#c0c2c7</item>
        <item name="android:textColor">#25292e</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <style name="code" parent="@style/MarkyMarkCode">
        <item name="android:background">#f6f8fa</item>
        <item name="android:textColor">#25292e</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="header1" parent="MarkyMarkHeader1">
        <item name="android:textColor">#95cefa</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header2" parent="MarkyMarkHeader2">
        <item name="android:textColor">#f1c343</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="header3" parent="MarkyMarkHeader3">
        <item name="android:textColor">#f1c343</item>
    </style>

    <style name="header4" parent="MarkyMarkHeader4">
        <item name="android:textColor">#f1c343</item>
    </style>

    <style name="header5" parent="MarkyMarkHeader5">
        <item name="android:textColor">#f1c343</item>
    </style>

    <style name="header6" parent="MarkyMarkHeader6">
        <item name="android:textColor">#f1c343</item>
    </style>

    <style name="paragraph" parent="MarkyMarkParagraph">
        <item name="android:textColor">#c0c2c7</item>
    </style>
</resources>
